{
  "name": "flowmap.gl",
  "description": "Flow map drawing layer for deck.gl",
  "author": "Teralytics AG",
  "license": "Apache-2.0",
  "version": "5.0.0",
  "keywords": [
    "flows",
    "flow map",
    "webgl",
    "visualization",
    "overlay",
    "layer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/teralytics/flowmap.gl.git"
  },
  "main": "dist/index.js",
  "module": "dist-esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist",
    "dist-esm"
  ],
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "cd examples && npm start",
    "storybook:build": "cd examples && npm run storybook:build",
    "storybook:deploy": "cd examples && npm run storybook:deploy",
    "typecheck": "lerna run --stream typecheck"
  },
  "devDependencies": {
    "gh-pages": "^2.0.1",
    "husky": "^1.2.0",
    "lerna": "^3.10.5",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  },
  "lint-staged": {
    "{src,test,stories}/**/*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged & npm run typecheck"
    }
  }
}
